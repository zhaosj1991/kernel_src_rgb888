#include "tegra186-quill-p3310-1000-c03-00-base.dts"
#include "quill-platforms/tegra186-quill-camera-ar0521.dtsi"

/ {
	nvidia,dtsfilename = __FILE__;
	host1x {
		vi_base: vi@15700000 {
			ports {
				ecam_vi_port0: port@0 {
					status = "okay";
					ar0521_vi_in0: endpoint {
						status = "okay";
					};
				};
			};
		};
		csi_base: nvcsi@150c0000 {
			csi_chan0: channel@0 {
				status = "okay";
				ports {
					csi_chan0_port0: port@0 {
						status = "okay";
						ar0521_csi_in0: endpoint@0 {
							status = "okay";
						};
					};
					csi_chan0_port1: port@1 {
						status = "okay";
						ar0521_csi_out0: endpoint@1 {
							status = "okay";
						};
					};
				};
			};
		};
	};
};
