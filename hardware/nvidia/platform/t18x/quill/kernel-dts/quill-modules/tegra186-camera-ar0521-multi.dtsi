						line_length = "2300";
						inherent_gain = "1";
						mclk_multiplier = "7.67";
						pix_clk_hz = "207000000";

						min_gain_val = "1.0";
						max_gain_val = "16";
						min_hdr_ratio = "1";
						max_hdr_ratio = "64";
						min_framerate = "2.787078";
						max_framerate = "120";
						min_exp_time = "22";
						max_exp_time = "358733";
					};

					ports {
						#address-cells = <1>;
						#size-cells = <0>;

						port@0 {
							status = "okay";
							reg = <0>;
							ar0521_out1: endpoint {
								status = "okay";
								csi-port = <0>;
								bus-width = <4>;
								remote-endpoint = <&ar0521_csi_in0>;
							};
						};
					};
				};
			};

			i2c@2 {
				ov5693_c@36 {
					status = "okay";
					compatible = "daheng,ar0521";
					/* I2C device address */
					reg = <0x36>;

					/* V4L2 device node location */
					devnode = "video2";

					/* Physical dimensions of sensor */
					physical_w = "3.674";
