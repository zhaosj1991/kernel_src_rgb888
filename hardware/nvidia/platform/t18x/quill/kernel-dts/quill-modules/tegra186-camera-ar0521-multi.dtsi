					vertical-flip = "true";

					mode0 { // AR0521_MODE_2592X1944
						mclk_khz = "27000";
						num_lanes = "4";
						tegra_sinterface = "serial_a";
						discontinuous_clk = "no";
						dpcm_enable = "false";
						cil_settletime = "0";

						active_w = "2592";
						active_h = "1944";
						pixel_t = "bayer_rggb";
						readout_orientation = "90";
						line_length = "2688";
						inherent_gain = "1";
						mclk_multiplier = "5.93";
						pix_clk_hz = "160000000";

						min_gain_val = "1.0";
						max_gain_val = "16";
